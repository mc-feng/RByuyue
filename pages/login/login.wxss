/* pages/login/login.wxss */
.clearfix:after{content:".";display:block;height:0;clear:both;visibility:hidden}
.clearfix{zoom:1}
/*登录title*/
.topbar{
  position:relative;
  height:48rpx;
  margin-top:48rpx;
}
.top{
  display:flex;
  position: absolute;
  top:0;
  left:50%;
  transform:translate(-50%,0);
}
.top .top-icon{
  width:36rpx;
  height:46rpx;
  margin-right:14rpx;
}
.top text{
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #000000;
  /* letter-spacing: 4rpx; */
  font-weight: 600;
}
/*登录主体*/
.main{
  padding:0 32rpx;
}
.title{
  padding:22rpx 32rpx 20rpx 32rpx;
  display:flex;
  justify-content: space-around;
}
.login-type{
  padding:0 18rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
}
.login-active{
  border-bottom: 1px solid #FA6205;
}
.content{
  width:100%;
}
.content-item{
  border-bottom: 1px solid #EEEEEE;
  display:flex;
  height:100rpx;
}
.content-flex{
  justify-content: space-between;
}
.content-option{
  display:flex;
  height:100rpx;
  justify-content: space-between;
}
.content-option navigator{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  
  letter-spacing: 0.48rpx;
  line-height:100rpx;
}
.to-register{
  color: #FA6205;
}
.to-password{
  color: #E02020;
}
.content-item text{
  line-height:100rpx;
  display:block;
  height:100%;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #FA6205;
  width:130rpx;
  text-align: justify;
  text-align-last: justify;
  letter-spacing: 0.48rpx;
}
.content i{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  line-height:100rpx;
  color: #FA6205;
  margin-right:30rpx;
}
.content-item input{
  height:100%;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #000;
  letter-spacing: 0.48rpx;
}
.content-left{
  display:flex;
}
.yzm{
    width:280rpx;
    margin-right:30rpx;
}
.send{
  display:flex;
  
}
.content-item b{
  width:4rpx;
  height:88rpx;
  margin-top:6rpx;
  background:#F0F0F0;
}
.getCode{
    display:block;
    padding:0 20rpx;
    height: 100rpx;
    border-radius: 10rpx;
    text-align:center;
    line-height:100rpx;
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #0091FF;
    letter-spacing: 0.48rpx;
}
.getCode em{
  font-style:normal;
  color:#ee2622;
}
.show{
  display:block;
}
.hide{
  display:none;
}
.placeholder{
  color: #CCCCCC;
}
.login-btn{
  background: #FA6205;
  border-radius: 8rpx;
  width:100%;
  height:98rpx;
  line-height:98rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0.52rpx;
  text-align: center;
  margin-top:24rpx;
}